<div class='row'>
  <div class='col-xs-12'>
  <%= form_for :user do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <b>Name</b>
          </div>
          <div class="col-sm-10">

            <%= f.text_field :name, class: "form-control", placeholder: " Enter name ", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :phno %> <br>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :phno,rows: 10, class: "form-control", placeholder: "enter phno" %>
          </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit class: 'btn btn-primary btn-sm' %>
            </div>
          </div>
  <% end %>

  </div>
</div>
